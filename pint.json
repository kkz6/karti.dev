{
    "preset": "laravel",
    "rules": {
        "binary_operator_spaces": {
            "default": "single_space",
            "operators": {
                "=>": "align",
                "=": "align"
            }
        },
        "phpdoc_separation": true,
        "phpdoc_align": {
            "align": "vertical"
        },
        "phpdoc_add_missing_param_annotation": {
            "only_untyped": false
        },
        "psr_autoloading": false
    }
}
